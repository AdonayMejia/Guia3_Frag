<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.guia3_android.Fragmento2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Descuentos Aplicados"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nombretxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Nombre"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/salariotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Salario"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/isssxtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="ISSS"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/afptxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AFP"
        android:layout_gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/rentatxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Renta"
        android:layout_gravity="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/snetotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#7FE178"
        android:layout_gravity="center"
        android:text="Salario Neto"
        android:textSize="16dp" />
</LinearLayout>